<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vtys_java23.MainController">
    <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe); -fx-padding: 20; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">

        <Label prefHeight="32.0" prefWidth="317.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Sosyal Yardımlaşma Platformu" textFill="WHITE" />

        <Button fx:id="btnLogin" onAction="#handleLogin" style="-fx-background-color: #3B82F6; -fx-text-fill: #FFFFFF; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Giriş Yap">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>


        <Button fx:id="btnRegister" onAction="#handleRegister" style="-fx-background-color: #10B981; -fx-text-fill: #FFFFFF; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Kayıt Ol">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="CENTER_LEFT" spacing="15"
      style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 20;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 4);"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.vtys_java23.YorumGoruntuleController">
    <!-- Header -->
    <StackPane alignment="CENTER_LEFT"
               style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);
                      -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 18px; -fx-font-weight: bold;" text="Yorum DetaylarÄ±" />
    </StackPane>

    <!-- Yazan -->
    <HBox spacing="10">
        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-weight: bold;" text="Yazan: " />
        <Label fx:id="lblYazanAdi" style="-fx-text-fill: #4facfe; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Alan -->
    <HBox spacing="10">
        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-weight: bold;" text="Alan: " />
        <Label fx:id="lblAlanAdi" style="-fx-text-fill: #4facfe; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Yorum Metni -->

        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-weight: bold;" text="Yorum:" />
        <TextArea fx:id="lblYorumMetni" editable="false" wrapText="true" prefHeight="250.0"
                  style="-fx-text-fill: #666666; -fx-font-size: 14px; -fx-background-color: #f9f9f9;
                         -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />


    <!-- Puan -->
    <HBox spacing="10">
        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-weight: bold;" text="Puan: " />
        <Label fx:id="lblPuan" style="-fx-text-fill: #4facfe; -fx-font-size: 14px;" />
    </HBox>

    <!-- Tarih -->
    <HBox spacing="10">
        <Label style="-fx-text-fill: #333333; -fx-font-size: 14px; -fx-font-weight: bold;" text="Tarih: " />
        <Label fx:id="lblTarih" style="-fx-text-fill: #666666; -fx-font-size: 14px;" />
    </HBox>
</VBox>

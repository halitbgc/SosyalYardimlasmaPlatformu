<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe); -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.vtys_java23.BagisYapController">
    <!-- Başlık -->
    <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Bağış Yapılacak Kullanıcıyı Seçin" />

    <!-- İlan Detayları -->
    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Seçili İlan:" />
    <Label fx:id="lblIlanDetay" style="-fx-font-size: 14; -fx-text-fill: #1F2937;" text="İlan Detayları Burada Görünecek" textFill="WHITE" wrapText="true" />

    <!-- Kullanıcı Seçimi -->
    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Bağış Yapılacak Kullanıcı:" />
    <ComboBox fx:id="comboKullanicilar" prefWidth="250" promptText="Kullanıcı Seçin" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5;" />

    <!-- Kargo Firması Seçimi -->
    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Kargo Firması Seçin:" />
    <ComboBox fx:id="comboKargoFirmalari" prefWidth="250" promptText="Kargo Firması Seçin" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5;" />

    <!-- Düğmeler -->
    <Button fx:id="btnBagisYap" onAction="#handleBagisYap" style="-fx-background-color: #10B981; -fx-text-fill: #FFFFFF; -fx-padding: 12 25; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-font-weight: bold;" text="Bağış Yap" />
    <Button fx:id="btnIptal" onAction="#handleIptal" style="-fx-background-color: #EF4444; -fx-text-fill: #FFFFFF; -fx-padding: 12 25; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-font-weight: bold;" text="İptal" />

    <!-- Margin Ayarları -->
    <VBox.margin>
        <Insets bottom="15" left="15" right="15" top="15" />
    </VBox.margin>
</VBox>

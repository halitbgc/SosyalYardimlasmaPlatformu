<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="613.0" prefWidth="213.0" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe); -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vtys_java23.RegisterController">
    <VBox alignment="CENTER" layoutX="50" layoutY="50" spacing="15" style="-fx-background-color: transparent;">
        <!-- Başlık -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Kayıt Ol" />

        <!-- Giriş Alanları -->
        <TextField fx:id="txtName" promptText="Ad" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <TextField fx:id="txtSurname" promptText="Soyad" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <TextField fx:id="txtEmail" promptText="E-posta" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <TextField fx:id="txtPhone" promptText="Telefon" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <PasswordField fx:id="txtPassword" promptText="Şifre" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <TextField fx:id="txtAddressTitle" promptText="Adres Başlığı" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
        <TextField fx:id="txtAddressContent" promptText="Adres İçeriği" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />

        <!-- Kayıt Ol Düğmesi -->
        <Button onAction="#handleRegister" style="-fx-background-color: #10B981; -fx-text-fill: #FFFFFF; -fx-padding: 12 25; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-font-weight: bold;" text="Kayıt Ol" />
        <Button fx:id="exit" layoutX="163.0" layoutY="220.0" onAction="#handleExit" style="-fx-background-color: #EF4444; -fx-text-fill: #FFFFFF; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5;" text="Çıkış">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
    </VBox>
</AnchorPane>
